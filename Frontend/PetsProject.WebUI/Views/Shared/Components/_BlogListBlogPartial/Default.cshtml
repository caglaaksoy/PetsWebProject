@model List<ResultBlogDto>
<div class="blog-page main-content-area">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model)
                {
                    <article class="blog-post post-bg">
                        <div class="post-media">
                            <img src="@item.BlogPhotoUrl" alt="" class="img-fluid">
                        </div>

                        <div class="post-content">
                            <div class="post-meta entry-meta">
                                <span class="post-meta-date">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</span>
                                <span class="post-author"><i class="fa fa-user"></i>@item.Writer</span>
                            </div>
                            <h2 class="post-title"><a href="/BlogList/ReadAllBlog/@item.BlogID/">@item.BlogTitle</a></h2>
                            <p>@(item.Text.Length > 150 ? item.Text.Substring(0, 150) + "..." : item.Text)</p>
                            <a href="/BlogList/ReadAllBlog/@item.BlogID/" class="btn btn-main2">Daha Fazla Oku <i class="fa fa-angle-right"></i></a>
                        </div>
                    </article>
                }


                <nav class="blog-pagination">
                    <ul>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-num @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a href="@Url.Action("Index", "BlogList", new { page = i })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>

          




            </div>

            <div class="col-md-4">
                <div class="blog-sidebar mt-5 mt-lg-0">
