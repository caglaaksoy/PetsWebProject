@model CreatePetDto
@{
    ViewData["Title"] = "UserAddPet";
    Layout = "~/Views/MemberEmptyLayout/_MemberEmptyLayout.cshtml";
}


<form method="post">
    <br />
    <br />
    <br />
    <br />
    <label>Pet Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <label>Pet Foto Url</label>
    <input type="text" asp-for="PhotoUrl" class="form-control" />
    <br />

    <label>Pet Yaşı</label>
    <input type="text" asp-for="Age" class="form-control" />
    <br />

    <label>Pet Cinsiyet</label>
    <input type="text" asp-for="Gender" class="form-control" />
    <br />

    <label>Pet Türü</label>
    <input type="text" asp-for="Type" class="form-control" />
    <br />

    <label>Pet DG</label>
    <input type="text" asp-for="BirthDate" class="form-control" />
    <br />

    <label>Pet Kayıt Tarihi</label>
    <input type="text" asp-for="RegisterDate" class="form-control" />
    <br />

