@model PetsProject.WebUI.Dtos.UserDto.UserAddPetDto
@{
    ViewData["Title"] = "UserAddPet";
    Layout = "~/Views/MemberEmptyLayout/_MemberEmptyLayout.cshtml";
}




<h2>Pet Ekle</h2>

<form asp-action="UserAddPet" method="post">
    <div class="form-group">
        <label for="PetTypeId">Hayvan Türü</label>
        <select asp-for="PetTypeId" class="form-control" id="PetTypeId" name="PetTypeId">
            <option value="">Seçiniz</option>
            @foreach (var petType in ViewBag.PetTypes)
            {
                <option value="@petType.PetTypeID">@petType.PetTypeName</option>
            }
        </select>
        <span asp-validation-for="PetTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="BreedId">Hayvan Cinsi</label>
        <select asp-for="BreedId" class="form-control" id="BreedId" name="BreedId">
            <option value="">Seçiniz</option>
            @foreach (var breed in ViewBag.Breeds)
            {
                <option value="@breed.BreedID">@breed.BreedName</option>
            }
        </select>
        <span asp-validation-for="BreedId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Name">Ad</label>
        <input asp-for="Name" class="form-control" id="Name" name="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label> Cinsiyet </label> <br />
        <input type="radio" asp-for="Gender" value="Erkek" /> Erkek
        <input type="radio" asp-for="Gender" value="Dişi" /> Dişi
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="BirthDate">Doğum Tarihi</label>
        <input type="date" asp-for="BirthDate" class="form-control" id="BirthDate" name="BirthDate">
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>


